<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h3 class="mb-3">Matakuliah Pilihan</h3>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= msg %> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <table class="table text-center">
                <thead>
                    <tr class="table-warning">
                        <th scope="col">#</th>
                        <th scope="col">Kode Matakuliah</th>
                        <th scope="col">Matakuliah</th>
                        <th scope="col">Semester</th>
                        <th scope="col">SKS</th>
                    </tr>
                </thead>
                <tbody>

                    <% if (dataMatkul.length === 0) { %>
                        <tr>
                            <td colspan="5">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Matakuliah Pilihan Anda masih kosong.
                                </div>
                            </td>
                        </tr>
                    <% } %>

                    <% dataMatkul.forEach((data, i) => { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data.matakuliah.kode_matakuliah %></td>
                            <td><%= data.matakuliah.nama_matakuliah %></td>
                            <td><%= data.semester %></td>
                            <td><%= data.matakuliah.sks %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>