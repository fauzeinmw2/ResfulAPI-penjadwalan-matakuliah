<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Matakuliah Pilihan Mahasiswa</h2>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= msg %> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <a href="/matkul-mahasiswa/add" class="btn btn-primary mb-2"><i class="bi bi-plus-circle"></i> Tambah Data</a>

            <h6 class="mt-3">Cari Data Jadwal Matakuliah</h6>
            <form action="/matkul-mahasiswa/search" method="post">
                <div class="input-group mb-3">
                    <input type="text" aria-label="nim" class="form-control" name="nim" placeholder="Cari Berdasarkan NIM Mahasiswa">
                    <input type="text" aria-label="semester" class="form-control" name="semester" placeholder="Cari Berdasarkan semester">
                    <button type="submit" class="btn btn-warning"><i class="bi bi-search"></i> Cari Data</button>
                </div>
            </form>

            <table class="table text-center">
                <thead>
                    <tr class="table-warning">
                        <th scope="col">#</th>
                        <th scope="col">NIM Mahasiswa</th>
                        <th scope="col">Nama Mahasiswa</th>
                        <th scope="col">Matakuliah</th>
                        <th scope="col">SKS</th>
                        <th scope="col">Semester</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>

                    <% if (dataMatkul.length === 0) { %>
                        <tr>
                            <td colspan="7">
                                <div class="alert alert-danger fw-bold text-center" role="alert">
                                    Matakuliah Pilihan Mahasiswa masih kosong.
                                </div>
                            </td>
                        </tr>
                    <% } %>

                    <% dataMatkul.forEach((data, i) => { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data.mahasiswa.nim %></td>
                            <td><%= data.mahasiswa.nama %></td>
                            <td><%= data.matakuliah.nama_matakuliah %></td>
                            <td><%= data.matakuliah.sks %></td>
                            <td><%= data.semester %></td>
                            <td>
                                <a href="/matkul-mahasiswa/<%= data.id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a onclick="return confirm('yakin mau hapus data ini?');" href="/matkul-mahasiswa/delete/<%= data.id %>" class="btn btn-danger badge rounded-pill"><i class="bi bi-trash-fill"></i> Hapus</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>