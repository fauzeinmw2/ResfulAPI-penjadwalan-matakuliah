<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">

            <% if (msg.length !== 0) { %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= msg %> 
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <h2>Data Kelas</h2>

            <a href="/kelas/add" class="btn btn-primary mb-2">Tambah Kelas</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama Kelas</th>
                        <th scope="col">Jurusan</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>

                    <% if (dataKelas.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold text-center" role="alert">
                                    Data Kelas masih kosong.
                                </div>
                            </td>
                        </tr>
                    <% } %>

                    <% dataKelas.forEach((kelas, i) => { %>
                        <tr>
                            <th scope="row"><%= i+1 %> </th>
                            <td><%= kelas.nama_kelas %> </td>
                            <td><%= kelas.jurusan.nama_jurusan %> </td>
                            <td>
                                <a href="/kelas/<%= kelas.id %>" class="btn btn-success badge rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a onclick="return confirm('yakin mau hapus data ini?');" href="/kelas/delete/<%= kelas.id %>" class="btn btn-danger badge rounded-pill"><i class="bi bi-trash-fill"></i> Hapus</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>